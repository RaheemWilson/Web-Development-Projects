    <script>
        var menuBtn = document.querySelector("#menuBtn")
        var sideNav= document.querySelector("#sideNav")
        var menu= document.querySelector("#menu")

        var screen = window.matchMedia('@media screen and (max-width: 770px)')
        if(screen.matches){
            menuBtn.onclick = () =>{
                if(sideNav.style.right == "-250px"){
                    sideNav.style.transition = "0.75s"
                    sideNav.style.right = "0"
                    menu.src = "{{ url_for('static', filename='images/close.png') }}"
                }
                else{
                    sideNav.style.transition = "0.75s"
                    sideNav.style.right = "-250px"
                    menu.src="{{ url_for('static', filename='images/menu.png') }}"
                }
            }
        } else{
            menuBtn.onclick = () =>{
                if(sideNav.style.right == "-100%"){
                    sideNav.style.right = "0"
                    sideNav.style.transition = "0.75s"
                    menu.src = "{{ url_for('static', filename='images/close.png') }}"
                }
                else{
                    sideNav.style.right = "-100%"
                    sideNav.style.transition = "0.75s"
                    menu.src="{{ url_for('static', filename='images/menu.png') }}"
                }
            }
        }
